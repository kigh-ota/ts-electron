{
  "name": "ts-electron-dev",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "webpack",
    "start": "electron ./app",
    "lint:fix": "tslint --fix './**/*.tsx'",
    "test": "tsc && mocha './app/generated/**/*_spec.js'",
    "test:ci": "tsc && mocha --reporter mocha-junit-reporter './app/generated/**/*_spec.js'",
    "package": "npm install && electron-rebuild -f --module-dir app && npm run build && build"
  },
  "build": {
    "appId": "ts-electron",
    "files": [
      "index.html",
      "node_modules/",
      "generated/main.js",
      "generated/renderer.js"
    ]
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/react": "^16.4.8",
    "@types/react-dom": "^16.0.7",
    "clean-webpack-plugin": "^0.1.19",
    "electron": "^2.0.9",
    "electron-builder": "^20.26.1",
    "electron-rebuild": "^1.8.2",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  }
}
